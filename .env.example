# VTon Virtual Try-On Platform - Environment Variables
# Copy this file to .env.local and fill in your actual values

# ===================================
# REQUIRED: AI & Image Generation
# ===================================

# Google Gemini API (for product analysis)
# Get from: https://aistudio.google.com/app/apikeys
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key_here

# Replicate API (for image generation)
# Get from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your_replicate_api_token_here

# ===================================
# REQUIRED: Storage
# ===================================

# Vercel Blob Storage (for images and files)
# Get from: Vercel Dashboard > Storage > Create Blob
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token_here

# ===================================
# REQUIRED: Database
# ===================================

# Neon Postgres Database Connection String
# Get from: https://console.neon.tech/
# Format: postgresql://user:password@host/database
DATABASE_URL=postgresql://user:password@host:5432/dbname
POSTGRES_URL=postgresql://user:password@host:5432/dbname

# ===================================
# SHOPIFY: OAuth & API Configuration
# ===================================

# Shopify App Credentials
# Get from: Shopify Partners > Your Apps > App Settings
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_SESSION_SECRET=your_session_secret_here

# Shopify Scopes (comma-separated)
# Required: read_products,read_content,read_orders,read_customers,write_customers
SHOPIFY_SCOPES=read_products,read_content,read_orders,read_customers,write_customers,read_themes

# Shopify App URL (for OAuth redirect)
# For production: https://your-domain.onrender.com
# For local development: http://localhost:3000
SHOPIFY_APP_URL=https://your-domain.onrender.com

# Shopify Storefront API Token (for public product fetching)
# Get from: Shopify Admin > Settings > Apps and Integrations > Develop Apps > Storefront Token
SHOPIFY_STOREFRONT_TOKEN=your_storefront_api_token_here

# ===================================
# DEPLOYMENT CONFIGURATION
# ===================================

# Node Environment
NODE_ENV=production

# Render Deployment Settings
# For Render: https://dashboard.render.com
RENDER_EXTERNAL_URL=https://your-domain.onrender.com

# Vercel Deployment (if using Vercel instead of Render)
VERCEL_URL=your-vercel-domain.vercel.app

# ===================================
# DATABASE OPTIONS
# ===================================

# Use Neon Serverless Client (recommended for serverless)
USE_SERVERLESS=true

# ===================================
# LOGGING & DEBUGGING
# ===================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ===================================
# SECURITY HEADERS
# ===================================

# CORS allowed origins (comma-separated)
# For production: your-store.myshopify.com,your-custom-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ===================================
# OPTIONAL: ADVANCED CONFIGURATION
# ===================================

# Image Upload Limits (in MB)
MAX_IMAGE_SIZE=20

# Max concurrent image uploads
MAX_CONCURRENT_UPLOADS=5

# Cache TTL (in seconds)
CACHE_TTL=300

# Session Expiry (in seconds)
SESSION_EXPIRY=86400

# ===================================
# PRODUCTION-ONLY SETTINGS
# ===================================

# Enable strict mode (no graceful degradation)
STRICT_MODE=false

# Enable error tracking (e.g., Sentry)
# SENTRY_DSN=https://key@sentry.io/project-id

# Enable performance monitoring
# ENABLE_MONITORING=true

# ===================================
# WEBHOOK CONFIGURATION
# ===================================

# Shopify Webhook Signing Secret
SHOPIFY_WEBHOOK_SECRET=your_webhook_signing_secret_here
