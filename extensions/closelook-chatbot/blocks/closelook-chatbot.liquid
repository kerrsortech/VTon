{% comment %}
  Closelook Chatbot App Embed Block
  This block appears under "App embeds" in the theme customizer
  When enabled, automatically injects the chatbot on product pages
{% endcomment %}

{% if block.settings.enabled != false %}
<div id="closelook-chatbot-container">
  <div
    id="closelook-chatbot-widget"
    data-shop-domain="{{ shop.domain }}"
    data-product-id="{{ product.id | default: '' }}"
    data-product-handle="{{ product.handle | default: '' }}"
    data-api-url="{{ block.settings.api_url | default: 'https://vton-1-hqmc.onrender.com/api' }}"
  >
    {% comment %} Chatbot will be injected here {% endcomment %}
  </div>
</div>

<style>
  /* Isolated styles for Closelook Chatbot */
  #closelook-chatbot-container {
    position: fixed;
    bottom: 24px;
    right: 24px;
    z-index: 999999;
    pointer-events: none;
  }
  
  #closelook-chatbot-container * {
    pointer-events: auto;
  }
  
  #closelook-chatbot-widget {
    position: relative;
  }
</style>

<script>
  (function() {
    'use strict';
    
    const widgetContainer = document.getElementById('closelook-chatbot-widget');
    if (!widgetContainer) {
      return;
    }

    // Extract product data from Shopify global object or DOM
    let shopifyProduct;
    
    try {
      // Try to get from window.Shopify if available
      if (window.Shopify && window.Shopify.product) {
        shopifyProduct = window.Shopify.product;
      } else {
        // Fallback: construct from Liquid variables and DOM
        shopifyProduct = {
          id: widgetContainer.dataset.productId,
          handle: widgetContainer.dataset.productHandle,
          title: '{{ product.title | escape }}',
          description: '{{ product.description | strip_html | truncate: 200 | escape }}',
          images: [],
          variants: [],
          product_type: '{{ product.type | escape }}',
          tags: {{ product.tags | json }},
          vendor: '{{ product.vendor | escape }}'
        };
        
        // Try to extract images from DOM
        const imageSelectors = [
          '.product__media img',
          '.product-images img',
          '.product-photos img',
          '.product-gallery img',
          '[data-product-media] img'
        ];
        
        imageSelectors.forEach(selector => {
          const images = document.querySelectorAll(selector);
          if (images.length > 0) {
            shopifyProduct.images = Array.from(images).slice(0, 5).map(img => {
              return img.src || img.dataset.src || img.currentSrc || 
                     (img.getAttribute('srcset') ? img.getAttribute('srcset').split(',')[0].trim().split(' ')[0] : '');
            }).filter(Boolean);
            return;
          }
        });
        
        // Try to extract price from DOM
        const priceElements = document.querySelectorAll('.price, .product-price, [data-price]');
        if (priceElements.length > 0) {
          const priceText = priceElements[0].textContent;
          const priceMatch = priceText.match(/[\d,]+\.?\d*/);
          if (priceMatch) {
            shopifyProduct.variants = [{
              price: parseFloat(priceMatch[0].replace(/,/g, '')),
              title: 'Default'
            }];
          }
        }
      }
    } catch (error) {
      console.error('Closelook: Error extracting product data', error);
      shopifyProduct = null;
    }

    // Load widget bundle
    const apiUrl = widgetContainer.dataset.apiUrl || 'https://vton-1-hqmc.onrender.com/api';
    const widgetUrl = apiUrl.replace('/api', '') + '/widgets/chatbot-widget.js';
    
    // Check if widget is already loaded
    if (window.CloselookChatbotWidget) {
      window.CloselookChatbotWidget.init({
        container: widgetContainer,
        product: shopifyProduct,
        shopDomain: widgetContainer.dataset.shopDomain,
        apiUrl: apiUrl
      });
      return;
    }
    
    const script = document.createElement('script');
    script.src = widgetUrl;
    script.async = true;
    
    script.onload = function() {
      if (window.CloselookChatbotWidget) {
        window.CloselookChatbotWidget.init({
          container: widgetContainer,
          product: shopifyProduct,
          shopDomain: widgetContainer.dataset.shopDomain,
          apiUrl: apiUrl
        });
      } else {
        console.error('Closelook: Widget loaded but init function not found');
      }
    };
    
    script.onerror = function() {
      console.error('Closelook: Failed to load chatbot widget from', widgetUrl);
    };
    
    document.head.appendChild(script);
  })();
</script>
{% endif %}

{% schema %}
{
  "name": "Closelook Chatbot",
  "target": "body",
  "settings": [
    {
      "type": "checkbox",
      "id": "enabled",
      "label": "Enable Chatbot",
      "default": true,
      "info": "Toggle the chatbot on/off"
    },
    {
      "type": "text",
      "id": "api_url",
      "label": "API URL",
      "default": "https://vton-1-hqmc.onrender.com/api",
      "info": "Your Closelook backend API URL"
    }
  ]
}
{% endschema %}

